# Ignore directories generated by Composer
/drush/contrib/
/vendor/
/web/core/
/web/modules/contrib/
/web/themes/contrib/
/web/profiles/contrib/
/web/libraries/
/web

# Ignore sensitive information
/web/sites/*/settings.php
/web/sites/*/settings.local.php

# Ignore generic services.yml file; allows local env overrides.
/web/sites/*/services.yml

# Ignore Drupal's files directory
/web/sites/*/files/
/private

# Ignore SimpleTest multi-site environment.
/web/sites/simpletest

# Ignore migration configuration exports
/config/sync/migrate_plus.*

# Ignore files generated by PhpStorm
/.idea/

# Ignore .env files as they are personal
/.env

# Ignore raw SQL files, potentially dangerous.
*.sql

# Misc tooling files to ingore.
.swp
.vscode
.DS_Store
.talismanrc
