{#
/**
 * @file
 * Theme override to display a feature node. This is a template
 * candidate for all view modes so may need splitting if the content type
 * uses further view modes in the future.
#}
<section{{ attributes.removeAttribute('role') }}>
  {{ title_prefix }}{{ title_suffix }}
  <a class="card card--no-border card--no-shadow" href="{{ content.field_link_url[0]['#url']|render }}">
    {{ content.field_photo }}
    <div class="card__body">
    {% if not page %}
      <h3{{ title_attributes.addClass('card__title') }}>
        {{ label }}
      </h3>
    {% endif %}
    {% if content.field_teaser %}
      <p>
        {{ content.field_teaser | field_value }}
      </p>
    {% endif %}
    </div>
  </a>
</section>
{{ content | without('field_photo', 'field_link_url', 'field_teaser') }}
