{#
/**
 * @file
 * Default theme implementation to webform confirmation.
 *
 * Available variables:
 * - progress: Progress bar.
 * - message: Confirmation message.
 * - back_url: URL to the previous webform submission.
 *
 * @see template_preprocess_webform_confirmation()
 *
 * @ingroup themeable
 */
#}

{{ attach_library('webform/webform.confirmation') }}

{%
  set back_classes = [
  'btn',
  'btn--large',
  'btn--primary',
  'btn--left',
]
%}

{% if progress %}
  {{ progress }}
{% endif %}

<div{{ attributes.addClass(['webform-confirmation', 'ga-main']) }}>

  {% if title %}
    <h1 class="page-title">{{ title }}</h1>
  {% endif %}

  {% if message %}
    <div class="webform-confirmation__message">{{ message }}</div>
  {% endif %}

  {% if back %}
  <div class="webform-confirmation__back">
    <a href="{{ back_url }}" rel="prev" data-self-ref="true" {{ back_attributes.addClass(back_classes) }}>{{ back_label }}</a>
  </div>
  {% endif %}

</div>
